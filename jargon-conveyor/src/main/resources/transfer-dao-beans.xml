<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

  <bean id="systemPropertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
      <property name="locations" value="classpath:transfer.properties"/>
  </bean>

  <!-- ========================= RESOURCE DEFINITIONS ========================= -->
  
  
  <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver" />
    <property name="url" value="${jdbc.url}" />
    <property name="username" value="${jdbc.user}" />
    <property name="password" value="${jdbc.password}" />
  </bean>

  <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
    <property name="dataSource" ref="dataSource" />
    <property name="configurationClass" value="org.hibernate.cfg.AnnotationConfiguration" />
    <property name="configLocation" value="classpath:transfer-dao-hibernate-spring.cfg.xml" />

    <property name="hibernateProperties">
      <props>
        <prop key="hibernate.dialect">org.hibernate.dialect.DerbyDialect</prop>
        <prop key="hibernate.show_sql">false</prop>
        <prop key="hibernate.auto_create_schema">true</prop>
        <prop key="hibernate.hbm2ddl.auto">update</prop>
        <prop key="hibernate.generate_statistics">false</prop>
        <prop key="hibernate.c3p0.minPoolSize">4</prop>
        <prop key="hibernate.c3p0.maxPoolSize">8</prop>
        <prop key="hibernate.c3p0.timeout">900</prop>
        <prop key="hibernate.c3p0.max_statement">50</prop>
        <prop key="hibernate.c3p0.testConnectionOnCheckout">false</prop>
        
      </props>
    </property>
  </bean>

  <!-- Transaction manager for a single Hibernate SessionFactory (alternative to JTA) -->
  <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <tx:annotation-driven transaction-manager="transactionManager" />

  <!-- ========================= BUSINESS OBJECT DEFINITIONS ========================= -->

  <bean id="transferDAO" class="org.irods.jargon.transfer.dao.spring.TransferDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="transferItemDAO" class="org.irods.jargon.transfer.dao.spring.TransferItemDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>
  
  <bean id="transferAttemptDAO" class="org.irods.jargon.transfer.dao.spring.TransferAttemptDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>
  
  <bean id="gridAccountDAO" class="org.irods.jargon.transfer.dao.spring.GridAccountDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="synchronizationDAO" class="org.irods.jargon.transfer.dao.spring.SynchronizationDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>

  <bean id="keyStoreDAO" class="org.irods.jargon.transfer.dao.spring.KeyStoreDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>
  
  <bean id="configurationPropertyDAO" class="org.irods.jargon.transfer.dao.spring.ConfigurationPropertyDAOImpl">
    <property name="sessionFactory" ref="sessionFactory" />
  </bean>
  
  <bean id="conveyorExecutorService" class="org.irods.jargon.conveyor.core.ConveyorExecutorServiceImpl">
  	<property name="executorServiceProperties">
      <props>
        <prop key="try.lock.timeout.seconds">1</prop>
      </props>
    </property>
  </bean>
  
  <bean id="gridAccountService" class="org.irods.jargon.conveyor.basic.GridAccountServiceImpl">
    <property name="gridAccountDAO" ref="gridAccountDAO" />
    <property name="keyStoreDAO" ref="keyStoreDAO" />
    <property name="conveyorExecutorService" ref="conveyorExecutorService"/>
  </bean>
  
  <bean id="conveyorService" class="org.irods.jargon.conveyor.core.ConveyorServiceImpl">
  	<property name="conveyorExecutorService" ref="conveyorExecutorService"/>
  	<property name="gridAccountService" ref="gridAccountService"/>
  	<property name="configurationService" ref="configurationService"/> 
  	<property name="queueManagerService" ref="queueManagerService"/> 
  	<property name="transferAccountingManagementService" ref="transferAccountingManagementService"/>
  </bean>
  
   <bean id="configurationService" class="org.irods.jargon.conveyor.basic.ConfigurationServiceImpl">
    <property name="configurationPropertyDAO" ref="configurationPropertyDAO" />
  </bean>
  
  <bean id="queueManagerService" class="org.irods.jargon.conveyor.basic.BasicQueueManagerServiceImpl">
  	<property name="conveyorExecutorService" ref="conveyorExecutorService"/>
  	 <property name="transferDAO" ref="transferDAO" />
  	 <property name="transferAttemptDAO" ref="transferAttemptDAO" />
  	 <property name="gridAccountService" ref="gridAccountService" />
  	 <property name="conveyorService" ref="conveyorService"/>
  </bean>
  
  <bean id="transferAccountingManagementService" class="org.irods.jargon.conveyor.basic.TransferAccountingManagementServiceImpl">
  	<property name="conveyorExecutorService" ref="conveyorExecutorService"/>
  	<property name="configurationService" ref="configurationService"/>
  	 <property name="transferDAO" ref="transferDAO" />
  	 <property name="transferAttemptDAO" ref="transferAttemptDAO" />
  	 <property name="transferItemDAO" ref="transferItemDAO" />
  	 <property name="gridAccountService" ref="gridAccountService" />
  </bean>
  
